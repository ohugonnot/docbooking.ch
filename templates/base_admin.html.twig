<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="description" content="DocBooking - Book a Doctor near You - Schedules at 12 - 48 hours Waiting only">
    <meta name="keywords" content="booking, doctor, available, schedule, April, May, June, July, symptom checker, diagnosis, medicine, natural, general practitioner, therapist, physiotherapist, dentist, psychologist, flu, depression, massage, pain, homeopathy, gynaecologist, fever, allergy">
    <meta name="author" content="Sean Kelly">
    <meta name="google-site-verification" content="9eQ9giGNEjTdLoRdI96g8EB9DPAuQ0r8-hM0HBnDsc8" />
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-158937519-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'UA-158937519-1');
    </script>
    <!--<meta http-equiv="refresh" content="300">-->
    <meta name="viewport" content="user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width">
    <title>{% block title %}DocBooking - Book a Doctor near You. 12 - 48 hours Waiting only{% endblock %}</title>
    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon">
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="/assets/js/html5shiv.min.js"></script>
    <script src="/assets/js/respond.min.js"></script>
    <![endif]-->
    {% block stylesheets %}
        <!-- Favicon -->
        <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.png">
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="/assets/admin/css/bootstrap.min.css">
        <!-- Fontawesome CSS -->
        <link rel="stylesheet" href="/assets/admin/css/font-awesome.min.css">
        <!-- Feathericon CSS -->
        <link rel="stylesheet" href="/assets/admin/css/feathericon.min.css">
        <link rel="stylesheet" href="/assets/admin/plugins/morris/morris.css">
        <!-- Main CSS -->
        <link rel="stylesheet" href="/assets/admin/css/style.css">

        <link rel="stylesheet" href="/assets/admin/plugins/datatables/datatables.min.css">
    {% endblock %}
</head>
<body>
    {% block header %}
        {% if app.user %}
            <div class="main-wrapper">
                <div class="header">
                    <div class="header-left">
                        <a href="{{ path('app_index') }}" class="logo">
                            <img src="/assets/admin/img/logo.png" alt="Logo">
                        </a>
                        <a href="{{ path('app_index') }}" class="logo logo-small">
                            <img src="/assets/img/doctor-default.jpg" alt="Logo" width="30" height="30">
                        </a>
                    </div>
                    <a href="javascript:void(0);" id="toggle_btn">
                        <i class="fe fe-text-align-left"></i>
                    </a>
                    <div style='display: none;' class="top-nav-search">
                        <form>
                            <input type="text" class="form-control" placeholder="Search here">
                            <button class="btn" type="submit"><i class="fa fa-search"></i></button>
                        </form>
                    </div>

                    <!-- Mobile Menu Toggle -->
                    <a class="mobile_btn" id="mobile_btn">
                        <i class="fa fa-bars"></i>
                    </a>
                    <!-- /Mobile Menu Toggle -->

                    <!-- Header Right Menu -->
                    <ul class="nav user-menu">

                        <!-- Notifications -->
                        <li class="nav-item dropdown noti-dropdown">
                            <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                                <i class="fe fe-bell"></i> <span class="badge badge-pill">3</span>
                            </a>
                            <div class="dropdown-menu notifications">
                                <div class="topnav-dropdown-header">
                                    <span class="notification-title">Notifications</span>
                                    <a href="javascript:void(0)" class="clear-noti"> Clear All </a>
                                </div>
                                <div class="noti-content">
                                    <ul class="notification-list">
                                        <li class="notification-message">
                                            <a href="#">
                                                <div class="media">
                                         <span class="avatar avatar-sm">
                                             <img class="avatar-img rounded-circle" alt="User Image" src="/assets/admin/img/doctors/doctor-thumb-01.jpg">
                                         </span>
                                                    <div class="media-body">
                                                        <p class="noti-details"><span class="noti-title">Dr. Ruby Perrin</span> Schedule <span class="noti-title">her appointment</span></p>
                                                        <p class="noti-time"><span class="notification-time">4 mins ago</span></p>
                                                    </div>
                                                </div>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="topnav-dropdown-footer">
                                    <a href="#">View all Notifications</a>
                                </div>
                            </div>
                        </li>
                        <!-- /Notifications -->

                        <!-- User Menu -->
                        <li class="nav-item dropdown has-arrow">
                            <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                                <span class="user-img"><img class="rounded-circle" src="/assets/admin/img/profiles/avatar-01.jpg" width="31" alt="Ryan Taylor"></span>
                            </a>
                            <div class="dropdown-menu">
                                <div class="user-header">
                                    <div class="avatar avatar-sm">
                                        <img src="/assets/admin/img/profiles/avatar-01.jpg" alt="User Image" class="avatar-img rounded-circle">
                                    </div>
                                    <div class="user-text">
                                        <h6>{{ app.user.email }}</h6>
                                        <p class="text-muted mb-0">Administrator</p>
                                    </div>
                                </div>
                                <a class="dropdown-item" href="">Settings</a>
                                <a class="dropdown-item" href="{{ path('app_admin_logout') }}">Logout</a>
                            </div>
                        </li>
                        <!-- /User Menu -->

                    </ul>
                    <!-- /Header Right Menu -->

                </div>
                <!-- /Header -->

                <!-- Sidebar -->
                <div class="sidebar" id="sidebar">
                    <div class="sidebar-inner slimscroll">
                        <div id="sidebar-menu" class="sidebar-menu">
                            <ul>
                                <li class="{% if app.request.get('_route') == 'app_admin_dashboard' %} active{% endif %}">
                                    <a href="{{ path('app_admin_dashboard') }}"><i class="fe fe-home"></i> <span>Dashboard</span></a>
                                </li>
                                <li class="{% if app.request.get('_route') == 'app_admin_doctors' %} active{% endif %}">
                                    <a href="{{ path('app_admin_doctors') }}"><i class="fe fe-user-plus"></i> <span>Doctors</span></a>
                                </li>
                                <li class="{% if app.request.get('_route') == 'app_admin_patients' %} active{% endif %}">
                                    <a href="{{ path('app_admin_patients') }}"><i class="fe fe-user"></i> <span>Patients</span></a>
                                </li>
                                <li class="{% if app.request.get('_route') == 'app_admin_appointments' %} active{% endif %}">
                                    <a href="{{ path('app_admin_appointments') }}"><i class="fe fe-layout"></i> <span>Appointments</span></a>
                                </li>
                                <li class="{% if app.request.get('_route') == '' %} active{% endif %}">
                                    <a href="{{ path('app_admin_dashboard') }}"><i class="fe fe-users"></i> <span>Specialities</span></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            {% endif %}
    {% endblock %}

    {% block body %}

    {% endblock %}

    {% block profilemodals %}

    {% endblock %}

    {% block footer %}
        {% if app.user %}
            </div>
        {% endif %}
    {% endblock %}

    {% block javascripts %}
        <script src="/assets/admin/js/jquery-3.2.1.min.js"></script>

        <!-- Bootstrap Core JS -->
        <script src="/assets/admin/js/popper.min.js"></script>
        <script src="/assets/admin/js/bootstrap.min.js"></script>

        <!-- Slimscroll JS -->
        <script src="/assets/admin/plugins/slimscroll/jquery.slimscroll.min.js"></script>

        <script src="/assets/admin/plugins/datatables/jquery.dataTables.min.js"></script>
        <script src="/assets/admin/plugins/datatables/datatables.min.js"></script>

        <!-- Custom JS -->
        <script  src="/assets/admin/js/script.js"></script>

        <script>
            $(document).on("click", ".action-delete-modal", function () {
                let id = $(this).data('url');
                $("#delete_modal input#id").val(id);
            });
            $(document).on("click", ".action-delete", function () {
                window.location.href = $("#delete_modal input#id").val();
            });
            $('#limit').change(function(){
                {% set route = app.request.attributes.get('_route') %}
                {% set route_params = app.request.attributes.get('_route_params') %}
                {% set query = route_params|merge(app.request.query.all) %}
                let url = "{{ path(route,query|merge({ 'limit': '_itemNum' }))|escape('js') }}";
                let item = $('select#limit').val();
                jQuery(location).attr('href', url.replace('_itemNum',item));
            });
            $(document).on("keyup", "input#search-input", function(e){
                if (e.keyCode === 13) {
                    e.preventDefault();
                    $("#search").trigger('click');
                }
            });
            $(document).on("click", "#search", function(){
                {% set route = app.request.attributes.get('_route') %}
                {% set route_params = app.request.attributes.get('_route_params') %}
                {% set query = route_params|merge(app.request.query.all) %}
                let url = "{{ path(route,query|merge({ 'search': '_search' }))|escape('js') }}";
                let item = $('input#search-input').val();
                jQuery(location).attr('href', url.replace('_search',item));
            });
        </script>
    {% endblock %}
</body>
</html>
