{% extends 'base.html.twig' %}

{% block title %}Password Reset for Patients{% endblock %}

{% block body %}
	<!-- Page Content -->
	<div class="content">
		<div class="container-fluid">
					
			<div class="row">
				<div class="col-md-8 offset-md-2">
							
					<!-- Account Content -->
					<div class="account-content">
						<div class="row align-items-center justify-content-center">
							<div class="col-md-7 col-lg-6 login-left">
								<img src="/assets/img/patient-login-banner.jpg" class="img-fluid" alt="Patient Login">									
							</div>
							<div class="col-md-12 col-lg-6 login-right">
								<div class="login-header">
									<h3>Forgot Password?</h3>
									<p class="small text-muted">Enter your email address and we we will send you a link to reset your password.</p>
								</div>
								
								{% for flashError in app.flashes('reset_password_error') %}
									<div class="alert alert-danger" role="alert">{{ flashError }}</div>
								{% endfor %}
								<!-- Forgot Password Form -->
								{{ form_start(requestForm) }}
									{{ form_row(requestForm.email) }}
									<div class="text-right">
										<a class="forgot-link" href="{{ path('app_patient_login') }}">Remember your password?</a>
									</div>
									<button class="btn btn-primary btn-block btn-lg login-btn" type="submit">Reset Password</button>
								{{ form_end(requestForm) }}
								<!-- /Forgot Password Form -->
										
							</div>
						</div>
					</div>
					<!-- /Account Content -->
							
				</div>
			</div>

		</div>

	</div>		
	<!-- /Page Content -->


{% endblock %}