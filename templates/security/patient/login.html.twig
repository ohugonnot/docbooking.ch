{% extends 'base.html.twig' %}

{% block title %}DocBooking.ch - Patient Login{% endblock %}

{% block body %}
<!-- Page Content -->
<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-8 offset-md-2">
							
				<!-- Login Tab Content -->
				<div class="account-content">
					<div class="row align-items-center justify-content-center">
						<div class="col-md-7 col-lg-6 login-left">
							<img src="/assets/img/patient-login-banner.jpg" class="img-fluid" alt="Patient Login">	
						</div>
						<div class="col-md-12 col-lg-6 login-right">
							<div class="login-header">
								<h3>Login <span>as a Patient</span></h3>
							</div>
							{% if error %}
								<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %}
							<form method="post">
								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
								<div class="form-group form-focus">
									<input type="email" id="email" name="email" value="{{ last_username }}" class="form-control floating" required="required" autocomplete="Email" />
									<label for="email" class="focus-label">Email</label>
								</div>
								<div class="form-group form-focus">
									<input type="password" id="password" name="password" class="form-control floating" required="required" autocomplete="current-password" />
									<label for="password" class="focus-label">Password</label>
								</div>
								<div class="w-100">
									<div class="text-left float-left w-50">
										<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
										<label for="remember_me">Remember me</label>
									</div>
									<div class="text-right float-left w-50">
										<a class="forgot-link" href="{{ path('app_patient_forgot_password_request') }}">Forgot Password ?</a>
									</div>
								</div>
								{% if redirect_to %}
									<input type="hidden" name="redirect_to" value="{{ redirect_to }}">
								{% endif %}
								<button class="btn btn-primary btn-block btn-lg login-btn" type="submit" id="_submit" name="_submit">Sign in</button>
								<div class="text-center dont-have">Donâ€™t have an account yet ? <a href="{{ path('app_patient_register') }}">Register as a New Patient</a></div>
							</form>
						</div>
					</div>
				</div>
				<!-- /Login Tab Content -->
								
			</div>
		</div>

	</div>

</div>		
<!-- /Page Content -->
{% endblock %}
